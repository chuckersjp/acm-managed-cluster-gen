---
apiVersion: v1
baseDomain: {{ publiczonename }}
compute:
- name: worker
  architecture: amd64
  hyperthreading: Enabled
  platform:
    aws:
      type: {{ aws_worker_instance }}
      zones: 
{% for zone in aws_zone %}
        - {{ zone }}
{% endfor %}
      rootVolume:
        iops: 4000
        size: 100
        type: iol
{% if aws_kmsKeyARN is defined and not 'None' %}
        kmsKeyARN: {{ aws_kmsKeyARN }}
{% endif %}
      subnets: 
{% for subnet in aws_subnets %}
        - {{ subnet }}
{% endfor %}
  replicas: {{ aws_workers }}
controlPlane:
  name: master
  architecture: amd64
  hyperthreading: Enabled
  platform:
    aws:
      type: {{ aws_master_instance }}
      zones: 
{% for zone in aws_zone %}
        - {{ zone }}
{% endfor %}
      rootVolume:
        iops: 4000
        size: 100
        type: iol
{% if aws_kmsKeyARN is defined and not 'None' %}
        kmsKeyARN: {{ aws_kmsKeyARN }}
{% endif %}
      subnets: 
{% for subnet in aws_subnets %}
        - {{ subnet }}
{% endfor %}
  replicas: 3
metadata:
  creationTimestamp: null
  name: {{ clustername }}
networking:
  clusterNetwork:
  - cidr: {{ clustercidr }}
    hostPrefix: 23
  machineNetwork:
{% for cidr in aws_vpccidr %}
  - cidr: {{ cidr }}
{% endfor %}
  networkType: {{ ocp_networkType | default("OpenShiftSDN") }}
  serviceNetwork:
  - {{ servicecidr }}
platform:
  aws:
    region: {{ aws_region }}
    hostedZone: {{ aws_hostedZone }}
{% if aws_userTags is defined %}
  userTags:
{% for tag in aws_userTags.items() %}
    {{ tag[0] }}: {{ tag[1] }}
{% endfor %}{% endif %}
  subnets:  
{% for subnet in aws_subnets %}
    - {{ subnet }}
{% endfor %}
proxy:
  httpProxy: {{ aws_proxy | default("") }}
  httpsProxy: {{ aws_proxy | default("") }}
  noProxy: {{ aws_noproxy | default("") }}
pullSecret: '{{ pull_secret | to_json }}'
{% if ssh_public_key is defined %}
sshKey: {{ ssh_public_key }}
{% endif %}
fips: {{ fips | default('false') }}
publish: {{ aws_publish | default('External') }}
credentialsMode: {{ aws_credentialsMode | default("") }}
{% if trustBundle is defined %}
addtionalTrustBundle: 
{% filter indent(width=2) %}
  {{ trustBundle }}
{% endfilter %}
{% endif %}
imageContentSources:
  - mirrors:
      - {{ repo }}/openshift-release-images
    source: quay.io/openshift-release-dev/ocp-release
  - mirrors:
      - {{ repo }}/release-images
    source: quay.io/openshift-release-dev-ocp-v4.0-art-dev
  - mirrors:
      - {{ repo }}/multicluster-engine
    source: registry.redhat.io.io/multicluster-engine
  - mirrors:
      - {{ repo }}/rhacm2
    source: registry.redhat.io.io/rhacm2
